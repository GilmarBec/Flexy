{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
	<div class="list_products">
		<h1>Produtos</h1>

		<table>
			<thead>
				<tr>
					<th>Nome</th>
					<th>Em estoque</th>
				</tr>
			</thead>

			<tbody>
				{% for product in products %}
				<tr>
					<td>{{ product.title }}</td>
					<td>{{ product.stock }}</td>
				</tr>
				{%  endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

